		            	<RelativeLayout style="@style/plenigi_patro.centro" android:gravity="center">
		            			<ImageButton 
		            				android:src="@drawable/amiko"
		            				android:id="@+id/bildo1"
		            				android:tag="amiko"
		            				android:onClick="ludu"
		            				
		            				style="@style/bildo_centro"
		            				/>
								<TextView 
									android:layout_below="@id/bildo1"
									android:text="@string/amiko"
									
									style="@style/bildo_signifo"/>
						</RelativeLayout>
					</LinearLayout>
					
					<LinearLayout style="@style/plenigi_patro">
		            	<RelativeLayout style="@style/plenigi_patro.centro" android:gravity="center">
		            			<ImageButton 
		            				android:src="@drawable/amikoj"
		            				android:id="@+id/bildo1"
		            				android:tag="amikoj"
		            				android:onClick="ludu"
		            				
