<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/editText1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <requestFocus />
    </EditText>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/malfonaKoloro" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                style="@style/menuo_bildo"
                android:layout_marginLeft="6dip"
                android:src="@drawable/jxetpluredro" />

            <TextView
                android:id="@+id/kiom_da_vortoj"
                style="@style/menuo_tekstobildo"
                android:text="45" />

            <ImageView
                style="@style/menuo_bildo"
                android:src="@drawable/korekta" />

            <TextView
                android:id="@+id/kiom_da_trafoj"
                style="@style/menuo_tekstobildo"
                android:text="10" />

            <ImageView
                style="@style/menuo_bildo"
                android:src="@drawable/nekorekta" />

            <TextView
                android:id="@+id/kiom_da_eraroj"
                style="@style/menuo_tekstobildo"
                android:text="10" />

            <TextView
                android:id="@+id/trafo_procento"
                style="@style/menuo_tekstobildo"
                android:layout_weight="1"
                android:gravity="right"
                android:text="100%" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView1"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
        android:text="lalala"
        android:textAppearance="?android:attr/textAppearanceMedium"

	    android:layout_above="@+id/button2"
	    android:layout_below="@+id/tableLayout1"
	    android:scrollbars="vertical"
         />
	    

    <Button
        android:id="@+id/button2"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_above="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:drawableBottom="@drawable/halti"
         />

    <Button
        android:id="@+id/button3"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_above="@+id/editText1"
        android:layout_toLeftOf="@+id/button2"
        android:drawableBottom="@drawable/ludi" />

    <Button
        android:id="@+id/button1"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_above="@+id/editText1"
        android:layout_toRightOf="@+id/button2"
        android:drawableBottom="@drawable/ripeti" />

</RelativeLayout>
