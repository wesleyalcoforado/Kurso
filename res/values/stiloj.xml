<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Hauxto" parent="android:Theme.Black.NoTitleBar.Fullscreen">
    	<item name="android:textColor">@color/malfonaKoloro</item>
    </style>
    
    <style name="Hauxto.Light" parent="android:Theme.Light.NoTitleBar.Fullscreen">
    	<item name="android:windowBackground">@color/fonaKoloro</item>
    	<item name="android:textColor">@color/malfonaKoloro</item>
    </style>    
    
    <style name="fonkaplinio">
    	<item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:background">@drawable/gradiento_verda_nigra</item>
    	<item name="android:padding">5px</item>
    </style>
    
    <style name="kaplinio">
    	<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    	<item name="android:textColor">#FFFFFF</item>
    	<item name="android:padding">5px</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:gravity">center_vertical</item>
    	<item name="android:layout_alignParentTop">true</item>
    	<item name="android:layout_alignParentBottom">true</item>
    </style>
    
    <style name="kaplinibildo">
    	<item name="android:layout_width">48dip</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_alignParentTop">true</item>
    	<item name="android:layout_alignParentBottom">true</item>
    	<item name="android:layout_alignParentRight">true</item>
    </style>
    
    <style name="reveni">
    	<item name="android:layout_width">48dip</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_alignParentTop">true</item>
    	<item name="android:layout_alignParentBottom">true</item>
    	<item name="android:layout_alignParentLeft">true</item>
    </style>    
    
    <style name="fonlisto">
    	<item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:padding">5px</item>
    	<item name="android:background">@drawable/listero</item>
    </style>    
    
    <style name="fonlistbildo">
    	<item name="android:layout_width">48dip</item>
    	<item name="android:layout_height">wrap_content</item>
    	<item name="android:layout_alignParentTop">true</item>
    	<item name="android:layout_alignParentBottom">true</item>
    	<item name="android:layout_alignParentRight">true</item>
    	<item name="android:src">@drawable/listero_bildo</item>
    </style>        
    
    <style name="plenigi_patro">
    	<item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="plenigi_patro.teksto">
    	<item name="android:padding">10dip</item>
    	<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    
    
    <color name="fonaKoloro">#F6FFE0</color>
    <color name="malfonaKoloro">#454839</color>
    <color name="listoKoloro">#474642</color>
    <color name="listoKoloroKlakita">#A2D339</color>
    
</resources>
